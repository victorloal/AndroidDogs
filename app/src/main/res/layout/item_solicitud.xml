<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/light_brown_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Paseador -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paseador: "
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewPaseador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Paseador"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Título y Descripción -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título de la tarjeta"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción de la tarjeta"
            android:textSize="14sp"/>

        <!-- Puedes agregar más vistas según sea necesario -->

    </LinearLayout>
</androidx.cardview.widget.CardView>
