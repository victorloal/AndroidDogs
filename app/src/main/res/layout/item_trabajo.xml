<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/light_brown_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Solicitante -->
        <LinearLayout
            android:id="@+id/solicitanteLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewSolicitante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solicitante "
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="está solicitando: "
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título de la tarjeta"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/solicitanteLayout"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción de la tarjeta"
            android:textSize="14sp"
            android:layout_below="@+id/textViewTitle"/>

        <ImageView
            android:id="@+id/btnAcceptWork"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginVertical="15dp"
            android:src="@drawable/icono_portafolio"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
