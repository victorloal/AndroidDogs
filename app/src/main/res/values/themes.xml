<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dogs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_1</item>
        <item name="colorPrimaryVariant">@color/brown_2</item>
        <item name="colorOnPrimary">@color/brown_3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green_1</item>
        <item name="colorSecondaryVariant">@color/light_green_2</item>
        <item name="colorOnSecondary">@color/green_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Dogs.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:backgroundTint">@color/light_brown_1</item>>
        <item name="colorPrimary">@color/brown_1</item>
        <item name="colorPrimaryVariant">@color/brown_2</item>
        <item name="colorOnPrimary">@color/light_brown_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green_1</item>
        <item name="colorSecondaryVariant">@color/light_green_2</item>
        <item name="colorOnSecondary">@color/green_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/green_dark</item>
        <item name="itemIconTint">@color/green_light_2</item>
        <item name="itemTextColor">@color/green_light_2</item>
        <item name="colorPrimary">@color/green_normal</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
    </style>

</resources>